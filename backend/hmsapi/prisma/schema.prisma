// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Location {
  id    Int     @default(autoincrement()) @id
  city String  
  country  String
  address String?
  hotels Hotel[]
}


model Hotel {
  id    Int     @default(autoincrement()) @id
  name String  
  locationid Int
  location  Location? @relation(fields:[locationid],references:[id])
  description String
}